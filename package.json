{
  "name": "@andrebuzeli/git-mcp",
  "version": "1.0.5",
  "description": "MCP server for Git operations with self-hosted Gitea and GitHub support",
  "main": "dist/server.js",
  "bin": {
    "git-mcp": "./dist/server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build",
    "postpublish": "echo 'MCP Git Server published successfully!'"
  },
  "keywords": [
    "mcp",
    "git",
    "gitea",
    "github",
    "ai-agent",
    "model-context-protocol",
    "repository-management",
    "git-operations"
  ],
  "author": "andrebuzeli",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "simple-git": "^3.20.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^9.1.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andrebuzeli/git-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/andrebuzeli/git-mcp/issues"
  },
  "homepage": "https://github.com/andrebuzeli/git-mcp#readme"
}
